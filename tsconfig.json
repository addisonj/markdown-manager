{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "spec",
    "**/*.test.ts",
    "**/__*.ts",
    "vitest.config.ts",
    "demo"
  ]
}
